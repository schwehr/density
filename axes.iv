# Very simple axis


Separator {
    BaseColor {rgb [ 1 0 0 ] }

    Coordinate3 {point [ 0 0 0, 0.05 0 0  ] }
    LineSet { numVertices [ 2 ] }

    Coordinate3 {point [ 0.5 0 0, 0.75 0 0  ] }
    LineSet { numVertices [ 2 ] }
    Translation { translation 0.8 0 0 }
    Text2 { string [ "X (East)" ]  }
}
Separator {
    BaseColor {rgb [ 0 1 0 ] }

    Coordinate3 {point [ 0 0 0, 0 0.05 0 ] }
    LineSet { numVertices [ 2 ] }

    Coordinate3 {point [ 0 0.5 0, 0 0.75 0 ] }
    LineSet { numVertices [ 2 ] }
    Translation { translation 0 0.8 0 }
    Text2 { string [ "Y (North)" ]  }
}
Separator {
    BaseColor {rgb [ 0 0 1 ] }

    Coordinate3 {point [ 0 0 0, 0 0 -0.05 ] }
    LineSet { numVertices [ 2 ] }

    Coordinate3 {point [ 0 0 -0.5, 0 0 -0.75 ] }
    LineSet { numVertices [ 2 ] }
    Translation { translation 0 0 -0.9 }
    Text2 { string [ "-Z" ]  }
}
